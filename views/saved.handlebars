<nav class="#424242 grey darken-3 z-depth-5">
    <div class="nav-wrapper">
        <a href="/" class="brand-logo">Mongo Scraper</a>
        <ul class="right #424242 grey darken-3">
            <li><a href="/" class="clear waves-effect waves-light btn #212121 grey darken-4">Home</a></li>
            <li><a href="/saved"><i class="material-icons left">account_box</i>Saved Articles</a></li>
        </ul>
    </div>
</nav>

<div class="blankArea N/A transparent "></div>
<div class="#e0e0e0 grey lighten-2 z-depth-5">
    <h5><i class="small material-icons left">favorite</i>Your Saved Articles</h5>
</div>

<main class="article-container">
     {{#each articles}}
      {{#if saved}}
    <div class="#f5f5f5 grey lighten-4">
        <div class="row">
            <div class="col s12 ">
                <div class="card #757575 grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}}
                           
                        </span>

                        <p>{{summary}}</p>
                    </div>
                    <div class="card-action">
 <a class="#d7ccc8 brown-text text-lighten-4"href="{{link}}">Read more</a>

  <a class="deleteArticle #9e9e9e grey btn right" data={{_id}}>DELETE FROM SAVED</a>
  <a class="addNote #616161 grey darken-2 btn right modal-trigger" data={{_id}} data-target="noteModal">ARTICLE NOTES</a>
                    </div>
                </div>
            </div>
        </div>


    </div>
    {{/if}}
{{/each}}
</main>


<footer class="page-footer N/A transparent">

    <div class="footer-copyright">
        <div class="container #424242 grey-text text-darken-3 center">
            New York Times Mongo Scraper
        </div>
    </div>
</footer>


<!--Clicked Notes Modal-->
<div id="noteModal{{_id}}" class="modal modalNote">
 <div class="modal-content">
     <h4>Notes for {{_id}}</h4>
 {{#if notes}}
  {{#each notes}}    
      <div id="noteArea">
        {{body}}
        </div>
   {{/each}}
    {{else}}
   <h5>No notes for this article yet.</h5>
{{/if}} 
    <p>
   <form class="col s12">
   <div class="input-field col s12">
     <textarea id="noteText{{_id}}" class="materialize-textarea" placeholder="New Note"></textarea>
   </div>
    </form>
    </p>
</div>
    <div class="modal-footer">
      <a class="modal-close #f48fb1 pink lighten-3 waves-effect waves-pink btn-flat saveNote" data={{_id}}>Save Note</a>
    </div>
  </div>
 
